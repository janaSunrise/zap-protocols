{
  "name": "zap-protocols",
  "version": "1.0.0",
  "description": "Protocols to speed up your web3 development workflow.",
  "source": "src/index.ts",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/module/index.d.ts",
  "files": [
    "contracts/",
    "abis/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn hardhat:compile && yarn copy-abis",
    "format": "prettier --write \"./**/*.{ts,tsx,json,md,sol}\"",
    "lint": "solhint 'contracts/**/*.sol'",
    "clean": "yarn hardhat:clean && rimraf artifacts dist typechain abi build",
    "test": "hardhat test",
    "analyze": "slither .",
    "copy-abis": "ts-node copy-abis.ts",
    "hardhat:compile": "hardhat compile",
    "hardhat:clean": "hardhat clean",
    "build:lib": "yarn run build && yarn run build:cjs && yarn run build:esm",
    "build:cjs": "tsc --outDir ./dist/main",
    "build:esm": "tsc --module esnext --outDir ./dist/module"
  },
  "dependencies": {},
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.3.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.42",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.9",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  },
  "keywords": [],
  "author": "Sunrit Jana",
  "license": "MIT",
  "homepage": "https://github.com/janaSunrise/zap-protocols",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janaSunrise/zap-protocols.git"
  },
  "bugs": {
    "url": "https://github.com/janaSunrise/zap-protocols/issues"
  }
}
